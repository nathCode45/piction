<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <stroke android:width="5dp" android:color="@color/black"/> <!--this controls the border size and color-->
            <solid android:color="@color/colorSecondaryLight"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <stroke android:width="3dp" android:color="@color/black"/> <!--this controls the border size and color-->
            <solid android:color="@color/colorSecondaryLight" />
        </shape>
    </item>
    <!--/this one is default so it goes at bottom-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <stroke android:width="3dp" android:color="@color/black"/> <!--this controls the border size and color-->
            <solid android:color="@color/colorSecondaryLight"/>
        </shape>
    </item>



</selector>